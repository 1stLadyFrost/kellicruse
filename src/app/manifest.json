{
  "manifest_version": 2,
  "minimum_chrome_version": "31",
  "name": "Mosh",
  "description": "Mosh (mobile shell) for Chrome.",
  "offline_enabled": true,
  "version": "0.2.0.20",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"socket": [
      "resolve-host",
      "tcp-connect",
      "udp-bind",
      "udp-send-to"
    ]},
    "clipboardRead",
    "clipboardWrite",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "128": "laptop_terminal.png"
  }
}
